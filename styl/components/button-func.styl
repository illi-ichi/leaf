disabled()
  bg-grey(200)
  text-grey(400)
  depth(0)
  &:hover
    background-color:none
    text-grey(400)
    bg-grey(200)
    depth(0)
  &:active
    depth(0)

button()
  padding:10px 20px
  border-radius:2px
  text-transform:uppercase
  width:auto
  transition:all .2s ease
  inline()
  depth(1)
  &:not(.waves-effect)
    &:hover
      bg-cyan(700)
      depth(1)
    &:active
      depth(2)
    &.disabled
      disabled()
input[type=submit]
  -webkit-appearance:none
  border:0
  font-style:normal
  -webkit-font-smoothing: antialiased
  button()
  &:focus
    outline:0
  &.flat
    background-color:transparent
  // &:hover
  //   color:darken(#fff, 10%)
  &.disabled,
  &:disabled
    disabled()

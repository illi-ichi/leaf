forms-defaults()
  width:100%
  background:none
  border:0
  border-bottom:1px solid $weak-color
  padding:5px 0 9px 0;
  border-radius:0
  -webkit-font-smoothing: antialiased
  &:focus
    outline:0
    border-width:2px
    padding-bottom:8px
    border-cyan()
  &:disabled
    border-style:dotted
    &:hover
      cursor:not-allowed
    &::-webkit-input-placeholder
      opacity:.5
    &:-moz-placeholder
      opacity:.5
    &::-moz-placeholder
      opacity:.5
    &:-ms-input-placeholder
      opacity:.5

forms-input-parent()
  position:relative
  transition:all .2s ease-in-out
  base-padding()
  .error-message
    padding:0 10px
    opacity:0
    visibility:hidden
    transition:all .2s ease-in-out
    small()
    text-red()
  &.error
    margin-bottom:20px
    .error-message
      opacity:1
      visibility:visible
    input,
    textarea
      border-width:2px
      padding-bottom:8px
      border-red()

put-down(stick = false)
  if stick
    top:0
    bottom:auto
  else
    top:100%
    bottom:auto

put-up(stick = false)
  if stick
    bottom:0
    top:auto
  else
    top:auto
    bottom:100%
put-left(stick = false)
  if stick
    left:0
    right:auto
  else
    left:auto
    right:100%
put-right(stick = false)
  if stick
    right:0
    left:auto
  else
    right:auto
    left:100%
set-width()
  width:100%
